<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeScale.View.HomeSlider">
    <ContentPage.Content>
        <StackLayout>            
            <Slider Minimum="0" Maximum="100" Value="{Binding MySlider, Mode=TwoWay}"/>
            <Label Text="{Binding MySlider}" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>