<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyHubApp.App">
    
	<Application.Resources>        
            <ResourceDictionary>
                <Color x:Key="minhaCor">Blue</Color>
                <Font x:Key="minhaFont">Large</Font>

                <Style x:Key="danger" TargetType="Button">
                    <Setter Property="BackgroundColor" Value="Red"/>
                    <Setter Property="Font" Value="{StaticResource minhaFont}"/>
                </Style>
                <Style x:Key="info" TargetType="Button">
                    <Setter Property="BackgroundColor" Value="Green"/>
                    <Setter Property="Font" Value="Small"/>
                </Style>
            </ResourceDictionary>        
    </Application.Resources>
    
</Application>