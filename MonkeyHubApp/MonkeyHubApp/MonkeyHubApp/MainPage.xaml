<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MonkeyHubApp"
             x:Class="MonkeyHubApp.MainPage">

    <StackLayout Spacing="60" Padding="30" VerticalOptions="Center" HorizontalOptions="Fill">

        <Entry Text="{Binding SearchTerm}"
               VerticalOptions="Center"
               HorizontalOptions="Fill"
               FontSize="Large"/>

        <Button Text="Pesquisar" 
               VerticalOptions="Center" 
               HorizontalOptions="Fill" 
               FontSize="Large"
               Command="{Binding SearchCommand}"/>

        <ListView ItemsSource="{Binding Resultados}">
            <ListView.ItemTeplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Description}"/>
                </DataTemplate>
            </ListView.ItemTeplate>
            
        </ListView>
            
         
    </StackLayout>

</ContentPage>